<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/custom_grey"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="multiplexer.contentcreator.MainActivity"
    tools:showIn="@layout/app_bar_main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.5"
        android:background="@android:color/white">

        <RelativeLayout
            android:id="@+id/actualView"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <multiplexer.contentcreator.views.AutoImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true" />

            <TextView
                android:id="@+id/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:text="Your Headline"
                android:textColor="@android:color/holo_red_light"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="3dp"
                />

            <TextView
                android:id="@+id/subHeadlineText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:text="Your Sub Headline"
                android:textColor="@android:color/holo_red_light"
                android:layout_centerInParent="true"
                />

            <TextView
                android:id="@+id/frontLineText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textStyle="bold"
                android:text="Your Front Line"
                android:textAlignment="center"
                android:textColor="@android:color/holo_red_light"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="3dp"
                />

        </RelativeLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:text="EDIT OPTIONS"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="18sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/blue" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3">

            <HorizontalScrollView
                android:id="@+id/weekday_buttonHolder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_margin="6dp"
                        android:layout_gravity="center"
                        android:orientation="vertical"
                        android:background="?android:attr/selectableItemBackground"
                        >
                        <ImageButton
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_gravity="center"
                            android:background="@null"
                            android:src="@drawable/fliter"
                            android:layout_weight="2"
                            />

                        <TextView
                            android:textColor="@color/white"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:text="Filters"
                            android:layout_weight="1"
                            />
                    </LinearLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/blue" />

                    <LinearLayout

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_margin="6dp"
                        android:layout_gravity="center"
                        android:orientation="vertical"
                        android:background="?android:attr/selectableItemBackground"
                        >
                        <ImageButton
                            android:id="@+id/blur"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_gravity="center"
                            android:background="@null"
                            android:src="@drawable/blur"
                            android:layout_weight="1"
                            />

                        <TextView
                            android:textColor="@color/white"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:text="Blur"
                            android:layout_weight="1"
                            />
                    </LinearLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/blue" />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_margin="6dp"
                        android:layout_gravity="center"
                        android:orientation="vertical"
                        android:background="?android:attr/selectableItemBackground"
                        >
                        <ImageButton
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_gravity="center"
                            android:background="@null"
                            android:src="@drawable/sharpen"
                            android:layout_weight="1"
                            />

                        <TextView
                            android:textColor="@color/white"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:text="Sharpen"
                            android:layout_weight="1"
                            />
                    </LinearLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/blue" />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_margin="6dp"
                        android:layout_gravity="center"
                        android:orientation="vertical"
                        android:background="?android:attr/selectableItemBackground"
                        >
                        <ImageButton
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_gravity="center"
                            android:background="@null"
                            android:src="@drawable/brightness"
                            android:layout_weight="1"
                            />

                        <TextView
                            android:textColor="@color/white"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:text="Brightness"
                            android:layout_weight="1"
                            />
                    </LinearLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/blue" />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_margin="6dp"
                        android:layout_gravity="center"
                        android:orientation="vertical"
                        android:background="?android:attr/selectableItemBackground"
                        >
                        <ImageButton
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_gravity="center"
                            android:background="@null"
                            android:src="@drawable/color"
                            android:layout_weight="1"
                            />

                        <TextView
                            android:textColor="@color/white"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:text="Colorify"
                            android:layout_weight="1"
                            />
                    </LinearLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/blue" />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_margin="6dp"
                        android:layout_gravity="center"
                        android:orientation="vertical"
                        android:background="?android:attr/selectableItemBackground"
                        >
                        <ImageButton
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_gravity="center"
                            android:background="@null"
                            android:src="@drawable/beauty"
                            android:layout_weight="1"
                            />

                        <TextView
                            android:textColor="@color/white"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:text="Beautify"
                            android:layout_weight="1"
                            />
                    </LinearLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/blue" />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_margin="6dp"
                        android:layout_gravity="center"
                        android:orientation="vertical"
                        android:background="?android:attr/selectableItemBackground"
                        >
                        <ImageButton
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_gravity="center"
                            android:background="@null"
                            android:src="@drawable/light"
                            android:layout_weight="1"
                            />

                        <TextView
                            android:textColor="@color/white"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:text="Light Fx"
                            android:layout_weight="1"
                            />
                    </LinearLayout>
                </LinearLayout>

            </HorizontalScrollView>

        </LinearLayout>


    </LinearLayout>

</LinearLayout>