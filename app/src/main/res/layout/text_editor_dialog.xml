<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical">


    <TextView
        android:id="@+id/text_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_centerHorizontal="true"
        android:background="@color/colorPrimary"
        android:textStyle="bold"
        android:gravity="center_horizontal"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:textColor="@android:color/white" />

    <EditText
        android:layout_marginTop="30dp"
        android:id="@+id/input_unit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_dialog"
        android:padding="10dp"
        android:lines="4"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
        android:textColor="@color/colorPrimaryDark" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/input_unit"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        >
        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/change_color_btn"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_below="@+id/text_dialog"
                android:layout_centerHorizontal="true"
                android:layout_margin="15dp"
                android:background="@drawable/buttonshape"
                android:gravity="center_vertical|center_horizontal"
                android:text="Color"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="#ffffffff" />

            <Button
                android:id="@+id/change_font_button"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_below="@+id/text_dialog"
                android:layout_centerHorizontal="true"
                android:layout_margin="15dp"
                android:background="@drawable/buttonshape"
                android:gravity="center_vertical|center_horizontal"
                android:text="Fonts"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="#ffffffff" />

        </LinearLayout>

        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/change_text_size_increase_button"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_below="@+id/text_dialog"
                android:layout_centerHorizontal="true"
                android:layout_margin="15dp"
                android:background="@drawable/buttonshape"
                android:gravity="center_vertical|center_horizontal"
                android:text="Text Size +"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="#ffffffff" />

            <Button
                android:id="@+id/change_text_size_decrease_button"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_below="@+id/text_dialog"
                android:layout_centerHorizontal="true"
                android:layout_margin="15dp"
                android:background="@drawable/buttonshape"
                android:gravity="center_vertical|center_horizontal"
                android:text="Text Size -"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="#ffffffff" />

        </LinearLayout>

        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_pos"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_below="@+id/text_dialog"
                android:layout_centerHorizontal="true"
                android:layout_margin="15dp"
                android:background="@drawable/buttonshape"
                android:gravity="center_vertical|center_horizontal"
                android:text="Done"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="#ffffffff" />

            <Button
                android:id="@+id/btn_neg"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_below="@+id/text_dialog"
                android:layout_centerHorizontal="true"
                android:layout_margin="15dp"
                android:background="@drawable/buttonshape"
                android:gravity="center_vertical|center_horizontal"
                android:text="Cancel"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="#ffffffff" />

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>